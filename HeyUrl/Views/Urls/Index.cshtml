@model IEnumerable<HeyUrl.ViewModels.CreateViewModel>

@{
    ViewData["Title"] = "Home Page";
}


@if (TempData["Notice"] is not null)
{
    <div class="card-panel notice deep-orange">@TempData["Notice"]</div>
}


<div class="row">
    <div class="col m12">
        <form asp-action="Create">
            <div class="card">
                <div class="card-content">
                    <div class="row">
                        <div class="col m8 offset-m2 center-align">
                            <span class="card-title">Create a new short URL</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m6 offset-m2">
                            <input name="originalUrl" type="text" id="originalUrl" value=@TempData["OriginalUrl"] class="validate form-control" placeholder="Your original URL here"/>
                        </div>                       
                        <div class="col m2">
                            <button type="submit" class="btn">Shorten URL</button>
                        </div>                        
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table highlight">
    <thead>
        <tr>
            <th scope="col">Short URL</th>
            <th scope="col">Original URL</th>
            <th scope="col">Created</th>
            <th scope="col">Clicks Count</th>
            <th scope="col">Stats</th>
        </tr>
    </thead>
    <tbody>       
        
        @foreach (var url in Model)
        {
      <tr>
        <th scope="row"><a href="/Clicks/@url.ShortUrl">@url.ShortUrl</a></th>
        <th scope="row" width=100><a>@url.OriginalUrl</a></th>
        <td>
          @url.CreatedView
        </td>
        <td>
          @url.Count
        </td>
        <td>
          <a href=@string.Format("/clicks/show/{0}/{1}", url.ShortUrl, url.Count)>
            <svg class="octicon octicon-graph" viewBox="0 0 16 16" version="1.1" width="16" height="16" aria-hidden="true">
              <path fill-rule="evenodd" d="M16 14v1H0V0h1v14h15zM5 13H3V8h2v5zm4 0H7V3h2v10zm4 0h-2V6h2v7z"></path>
            </svg>
          </a>
        </td>
        <td>
          <a asp-action="Delete" asp-route-id="@url.ShortUrl">Delete</a>
        </td>
      </tr>
        }
    </tbody>
</table>
